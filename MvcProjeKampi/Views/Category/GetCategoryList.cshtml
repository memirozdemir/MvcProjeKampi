@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Aciklama</th>
            <th>Durum</th>
            <th>Duzenle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CategoryID</td>
                <td>@x.CategoryName</td>
                <td>@x.CategoryDescription</td>
                <td>@x.CategoryStatus</td>
                <td><a href="/Category/Edit/@x.CategoryID" class="btn btn-success"/>Duzenle</td>
            </tr>
        }

    </table>
    <a href="/Category/Insert" class="btn btn-success">Kategori Ekle</a>
</div>
